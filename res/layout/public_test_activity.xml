<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:background="#ff49b97b" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:id="@id/doc_info" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <Button android:id="@id/edit" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/public_edit" />
        <Button android:id="@id/saveas" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/public_saveAs" />
        <Button android:id="@id/upload" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="手动上传" />
        <Button android:id="@id/insert_pic" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/documentmanager_addPic" />
        <Button android:id="@id/insert_evernote" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="插入Evernote" />
        <Button android:id="@id/share_evernote" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="分享Evernote" />
        <Button android:id="@id/dialog_normal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="正常对话框" />
