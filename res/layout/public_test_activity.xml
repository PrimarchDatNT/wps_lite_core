        <Button android:id="@id/dialog_alert" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="CustomAlertDialog" />
        <Button android:id="@id/stat_event" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="统计事件" />
