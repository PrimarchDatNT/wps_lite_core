<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/backgroundColor" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <cn.wps.moffice.main.common.viewcontrols.ViewTitleBar android:id="@id/vtb_titlebar" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </FrameLayout>
    <RelativeLayout android:gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ScrollView android:scrollbarStyle="outsideOverlay" android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:layout_width="@dimen/author_pc_login_pic_width" android:layout_height="@dimen/author_pc_login_pic_height" android:src="@drawable/pub_cloud_function_pic_pc" android:layout_centerHorizontal="true" />
                <TextView android:textSize="@dimen/author_pc_login_content_text_size" android:textColor="@color/mainTextColor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/author_pc_login_button_m_top" android:text="@string/author_pc_login_info" android:layout_centerHorizontal="true" />
                <TextView android:textSize="@dimen/author_pc_login_dev_info_text_size" android:textColor="@color/subTextColor" android:id="@id/tv_aappl_device_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/author_pc_login_dev_name_m_top" android:maxLines="1" android:layout_centerHorizontal="true" />
                <TextView android:textSize="@dimen/author_pc_login_dev_info_text_size" android:textColor="@color/subTextColor" android:id="@id/tv_aappl_device_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/author_pc_login_dev_name_m_top" android:layout_centerHorizontal="true" />
                <TextView android:textColor="@color/mainColor" android:id="@id/tv_aappl_remind_info" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/author_pc_login_remind_m_top" android:text="@string/author_pc_login_other_device" />
                <Button android:textSize="@dimen/author_pc_login_button_text_size" android:textColor="@color/whiteMainTextColor" android:id="@id/btn_aappl_confirm_login" android:background="@drawable/public_round_rect_blue_bg_4dp_1px_selector" android:layout_width="@dimen/author_pc_login_button_width" android:layout_height="@dimen/author_pc_login_button_height" android:layout_marginTop="@dimen/author_pc_login_button_m_top" android:text="@string/author_pc_login_confim_login" />
                <TextView android:textSize="@dimen/author_pc_login_only_one_text_size" android:textColor="@color/subTextColor" android:id="@id/tv_aappl_only_one" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/author_pc_login_only_one_m_top" android:text="@string/author_pc_login_only_one" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>