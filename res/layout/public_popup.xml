    <FrameLayout android:id="@id/tracks_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/arrow_up">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@id/tracks" android:background="@drawable/pad_comp_pop_track" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/pad_public_pop_arrow_height_white" />
    </FrameLayout>
    <ImageView android:id="@id/arrow_down" android:layout_width="@dimen/pad_public_pop_arrow_width_white" android:layout_height="@dimen/pad_public_pop_arrow_height_white" android:src="@drawable/pad_public_pop_arrow_down" android:layout_below="@id/tracks_container" />
</RelativeLayout>