<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/rippleColor"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="true" android:state_pressed="true">
                <shape>
                    <corners android:radius="2.0dip" />
                    <solid android:color="@color/buttonMainPressedColor" />
                </shape>
            </item>
            <item android:state_selected="false" android:state_pressed="true">
                <shape>
                    <corners android:radius="2.0dip" />
                    <solid android:color="@color/cellSelectedColor" />
                    <stroke android:width="1.0dip" android:color="@color/subLineColor" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape>
                    <corners android:radius="2.0dip" />
                    <solid android:color="@color/buttonMainColor" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape>
                    <corners android:radius="2.0dip" />
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1.0dip" android:color="@color/subLineColor" />
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="2.0dip" />
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1.0dip" android:color="@color/subLineColor" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>