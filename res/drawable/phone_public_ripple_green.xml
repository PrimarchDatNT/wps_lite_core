<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/rippleColor"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="true" android:drawable="@drawable/phone_public_btn_green" />
            <item android:state_enabled="false">
                <layer-list>
                    <item android:drawable="@drawable/color_alpha_disable" />
                    <item>
                        <shape>
                            <solid android:color="#4d2dbc59" />
                            <corners android:radius="3.0dip" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>
</ripple>