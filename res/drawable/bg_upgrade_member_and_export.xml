<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/rippleColor"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="@color/buttonMainDisableColor" />
                    <corners android:radius="@dimen/kmui_large_fill_button_corner_radius" />
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape>
                    <solid android:color="@color/buttonMainColor" />
                    <corners android:radius="@dimen/kmui_large_fill_button_corner_radius" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>