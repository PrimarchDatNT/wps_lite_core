<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2.0dip" />
            <gradient android:startColor="@color/maskBackgroundColor" android:endColor="@color/maskBackgroundColor" android:angle="90.0" android:centerColor="@color/maskBackgroundColor" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2.0dip" />
                <gradient android:startColor="@color/secondaryColor" android:endColor="@color/secondaryColor" android:angle="90.0" android:centerColor="@color/secondaryColor" />
            </shape>
        </clip>
    </item>
</layer-list>