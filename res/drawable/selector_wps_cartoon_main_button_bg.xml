<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/rippleColor"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/cartoon_theme_main_pressed_color" />
            <corners android:radius="21.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/cartoon_theme_main_disabled_color" />
            <corners android:radius="21.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/novel_NovelMainColor" />
            <corners android:radius="21.0dip" />
        </shape>
    </item>
</ripple>