<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/rippleColor"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <bitmap android:gravity="end|bottom|center" android:src="@drawable/phone_public_dropdown_arrow_disable_bg" />
            </item>
            <item android:state_enabled="true" android:state_selected="true">
                <bitmap android:gravity="end|bottom|center" android:src="@drawable/phone_public_dropdown_arrow_activate_bg" />
            </item>
            <item android:state_enabled="true" android:state_pressed="true">
                <bitmap android:gravity="end|bottom|center" android:src="@drawable/phone_public_dropdown_arrow_activate_bg" />
            </item>
            <item android:state_enabled="true">
                <bitmap android:gravity="end|bottom|center" android:src="@drawable/phone_public_dropdown_arrow_default_bg" />
            </item>
        </selector>
    </item>
</ripple>