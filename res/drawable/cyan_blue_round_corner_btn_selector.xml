<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/buttonSecondaryColor" />
            <corners android:radius="16.0dip" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/buttonSecondaryPressedColor" />
                    <corners android:radius="16.0dip" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/rippleColor" />
                    <corners android:radius="16.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/buttonSecondaryDisableColor" />
            <corners android:radius="16.0dip" />
        </shape>
    </item>
</selector>