<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/rippleColor"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item>
                <shape>
                    <solid android:color="@color/buttonMainColor" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <layer-list>
                    <item>
                        <shape>
                            <solid android:color="@color/buttonMainColor" />
                        </shape>
                    </item>
                    <item>
                        <shape>
                            <solid android:color="@color/disableColor" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>
</ripple>