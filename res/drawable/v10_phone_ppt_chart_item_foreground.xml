<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/rippleColor"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="5.0dip" />
            <solid android:color="@color/thirdBackgroundColor" />
        </shape>
    </item>
    <item>
        <selector
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <corners android:radius="5.0dip" />
                    <stroke android:width="1.0dip" android:color="@color/WPPMainColor" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="5.0dip" />
                    <stroke android:width="1.0px" android:color="@color/borderLineColor" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>